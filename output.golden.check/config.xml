<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
    	xmlns:android="http://schemas.android.com/apk/res/android"
        id          = "com.haramaty.zvika.milon"
        version     = "1.1.0" >


    <!-- This uses Intel's Crosswalk HTML engine instead of default WebView, which behaves differently on each device -->
	<!-- follow this: https://forums.adobe.com/thread/2115661 -->
    <plugin name="org.crosswalk.engine" spec="1.3.0" source="pgb" />

    <!-- This was a trial, currently not used, left here for future reference -->
    <!-- versionCode is optional and Android only -->
    <!--gap:plugin name="cordova-plugin-appversion" source="npm"/-->

    <!-- This allows clicking on mails addresses to work -->
    <gap:plugin name="cordova-plugin-whitelist" source="npm" />
    <allow-intent href="mailto:*" />
    <access origin="mailto:*" launch-external="yes"/>

    <name>מילון הראיה</name>
	
	<icon src="icon.png" />

    <description>
    </description>

    <author href="https://build.phonegap.com" email="haramaty.zvika@gmail.com">
        Zvika Haramaty
    </author>

    <platform name="android" />
    <!--platform name="ios" /-->

    <preference name="loadUrlTimeoutValue" value="700000" />

    <preference name="permissions" value="none"/>

    <gap:config-file platform="android" parent="/manifest/application">
        <activity android:launchMode="singleTop" />
    </gap:config-file>

    <gap:config-file platform="android" parent="/manifest">
         <!--<application android:debuggable="true" />-->
    </gap:config-file>


</widget>